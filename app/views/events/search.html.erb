<%= render 'shared/flash_messages' %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="side-bar mb-3">
        <%= render "search_form" %>
      </div>
    </div>
    <div class="col-md-9">
      <h4 class="headding main-color tab-bar p-2 text-white mb-0">検索結果</h4>
      <div class="wrapper pl-2 pt-2 pr-2 ">
        <% @events.order(updated_at: "DESC").each do |event| %>
          <%= render event %>
        <% end %>
        <%= paginate @events %>
      </div>
    </div>
  </div>
</div>
