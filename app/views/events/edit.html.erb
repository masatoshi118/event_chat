<div class="container-login">
  <h2>イベント編集</h2>

  <%= form_with model: @event, local: true do |form| %>
    <div class="form-group">
      <%= form.label :title, class: 'control-label' %>
      <%= form.text_field :title, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= form.label :venue, class: 'control-label' %>
      <%= form.text_field :venue, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= form.label :datetime, class: 'control-label' %>
      <div class="input-group date" id="datetimepicker1" data-target-input="nearest">
        <%= form.text_field :datetime, class: 'form-control datetimepicker-input', required: true, data: {target: "#datetimepicker1"} %>
        <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
          <div class="input-group-text"><i class="fa fa-calendar"></i></div>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :image, class: 'control-label' %>
      <div class="custom-file">
        <%= form.file_field :image, class: 'custom-file-input', id: "inputFile" %>
        <label class="custom-file-label" for="inputFile">ファイルを選択して下さい</label>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :content, class: 'control-label' %>
      <small class="form-text text-muted card-nickname">マークダウン形式で記入することができます</small>
      <%= form.text_area :content, rows: '10', class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= form.submit '編集完了', class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>
</div>