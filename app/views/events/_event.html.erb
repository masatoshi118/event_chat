<div class="media row">
  <div class="col-md-3">
    <div class="eyechatch">
      <a class="text-center" href="<%= event_path(event.id) %>" title="<%= event.title %>">
        <%= image_tag event.event_image_url, alt: "event image", class: "event-image" %>
      </a>
      <% if event.datetime > Time.current %>
        <span class="event-label d-block bg-warning my-2 text-center"><%= "開催前" %></span>
      <% else %>
        <span class="event-label d-block bg-secondary my-2 text-center text-white"><%= "開催済み" %></span>
      <% end %>
    </div>
  </div>
  <div class="col-md-9">
    <h5 class="mt-0"><%= link_to "#{event.title}", event_path(event.id), class: "text-dark " %></h5>
    <p class="text-black mb-0">【　日時　】 <%= l event.datetime, format: '%Y年 %-m月 %-d日 %H:%M' %></p>
    <p class="text-black mb-1">【開催場所】 <%= event.venue %></p>
    <div class="d-inline-block mt-2 ml-2 name-label">
      <a class="name-label d-flex p-1 text-black-50" href="<%= user_path(event.user) %>">
        <%= image_tag event.user.image_url, :size => '20x20', class: "mr-1 avater-icon" %>
        <small><%= event.user.name %></small>
      </a>
    </div>
    <small class="float-right pt-3"><%= l event.updated_at, format:'投稿日：%Y / %-m / %-d' %></small>
  </div>
</div>
<hr>