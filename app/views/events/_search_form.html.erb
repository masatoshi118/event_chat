<%= search_form_for(@q, url:search_path) do |f| %>
  <div class="form-group">
    <%= f.label :title_or_content_cont, "キーワード" %>
    <%= f.search_field :title_or_content_cont, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :venue_cont, "開催地" %>
    <%= f.search_field :venue_cont, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :datetime_lteq_end_of_day, "開催日", class: 'control-label' %>
    <div class="input-group date" id="datetimepicker-date-only" data-target-input="nearest">
      <%= f.text_field :datetime_lteq_end_of_day, class: 'form-control datetimepicker-input', data: {target: "#datetimepicker-date-only"} %>
      <div class="input-group-append" data-target="#datetimepicker-date-only" data-toggle="datetimepicker">
        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit '検索', class: 'btn btn-primary btn-block' %>
  </div>
<% end %>