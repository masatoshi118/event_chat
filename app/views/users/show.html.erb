<div class="card mb-3">
  <%= image_tag @user.image_url, class: "card-image-top" %>
  <div class="card-body">
    <h4 class="card-title"><%= @user.name %></h4>
    <small class="form-text text-muted card-nickname"><%= @user.nickname %></small>
    <p class="card-text">
      <%= @user.description %>
    </p>
    <% if @user.nickname %>
      <a href="https://twitter.com/<%= @user.nickname %>" class="btn btn-primary" target="_blank"><i class="fa fa-twitter" aria-hidden="true"></i> My Twitter</a>
    <% end %>
  </div>
</div>

<ul id="myTab" class="nav nav-tabs main-color tab-bar" role="tablist">
  <li class="nav-item tab-item" role="presentation">
    <a href="#home" id="home-tab" class="nav-link active" role="tab" data-toggle="tab" aria-controls="home" aria-selected="true">参加イベント</a>
  </li>
  <li class="nav-item tab-item" role="presentation">
    <a href="#profile" id="profile-tab" class="nav-link" role="tab" data-toggle="tab" aria-controls="profile" aria-selected="false">開催イベント</a>
  </li>
</ul>

<div id="myTabContent" class="tab-content mt-3">
  <div id="home" class="tab-pane active" role="tabpanel" aria-labelledby="home-tab">
    <div class="container">
      <% @joined_events.each do |event| %>
        <%= render event %>
      <% end %>
      <%= paginate @joined_events %>
    </div>
  </div>
  <div id="profile" class="tab-pane" role="tabpanel" aria-labelledby="profile-tab">
    <div class="container">
      <% @holded_events.each do |event| %>
        <%= render event %>
      <% end %>
      <%= paginate @holded_events %>
    </div>
  </div>
</div>